@model BankMatilda.Models.AccountViewModel
@{
    ViewData["Title"] = "Admin Page";
}

<div class="row">
    <div class="col-md-3">
        <h1 class="display-4">Accounts</h1>
    </div>
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Accounts</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Account ID</th>
                            <th scope="col">Balance</th>
                            <th scope="col">Created</th>
                            <th scope="col">Loans</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.AccountList)
                        {
                            <tr>
                                <td>@account.AccountId</td>
                                <td>@account.Balance</td>
                                <td>@account.Created</td>
                                <td>@account.Loans</td>


                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5">
                                <nav aria-label="...">
                                    <ul class="pagination justify-content-center flex-wrap">
                                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Account"
                                               asp-action="Index"
                                               asp-route-page="1">First</a>
                                        </li>
                                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Account"
                                               asp-action="Index"
                                               asp-route-page="@(Model.CurrentPage - 1)">Prev</a>
                                        </li>
                                        
                                        @foreach (var pa in Model.DisplayPages)
                                        {
                                            <li class="page-item @(Model.CurrentPage == pa ? "disabled" : "")">
                                                <a class="page-link text-primary"
                                                   asp-controller="Account"
                                                   asp-action="Index"
                                                   asp-route-page="@pa">@pa</a>
                                            </li>
                                        }

                                        <li class="page-item @(Model.CurrentPage == Model.TotalPageCount ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Account"
                                               asp-action="Index"
                                               asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                                        </li>
                                        <li class="page-item @(Model.CurrentPage == Model.TotalPageCount ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Account"
                                               asp-action="Index"
                                               asp-route-page="@(Model.TotalPageCount)">Last</a>
                                        </li>
                                    </ul>
                                </nav>
                            </td>
                        </tr>
                    </tfoot>
                </table>


            </div>
        </div>
    </div>
</div>