@model BankMatilda.Models.CustomersViewModel
@{
    ViewData["Title"] = "Admin Page - Customers";
}

<div class="row">
    <div class="col-md-3">
        <h1 class="display-4">Customers</h1>
        <ul class="nav nav-pills flex-column">
            <partial name="_SideBarPartial" />
        </ul>
    </div>
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Transationer</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Givenname</th>
                            <th scope="col">Birthday</th>
                            <th scope="col">City</th>
                            <th scope="col">Emailaddress</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Streetaddress</th>
                            <th scope="col">Telephonenumber</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var accounts in Model.Customer)
                        {
                            <tr>
                                <td>@accounts.Givenname</td>
                                <td>@accounts.Birthday</td>
                                <td>
                                    @accounts.City
                                </td>
                                <td>@accounts.Emailaddress</td>
                                <td>@accounts.Gender</td>
                                <td>@accounts.Streetaddress</td>
                                <td>@accounts.Telephonenumber</td>
                                <td><a asp-controller="Customer" asp-action="Index" asp-route-Id="@accounts.CustomerId" class="btn btn-secondary active" role="button" aria-pressed="true">View customer</a></td>
                                <td><a asp-controller="Customer" asp-action="EditCustomer" asp-route-Id="@accounts.CustomerId" class="btn btn-secondary active" role="button" aria-pressed="true">Edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>