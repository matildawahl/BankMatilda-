@using BankMatilda.Data
@model BankMatilda.Models.CustomerDetailsViewModel
<div class="row">
    <div class="col-md-3">
        <h2 class="display-4">Customer Details</h2>
    </div>
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Customer Profile</h3>
            </div>
        </div>
       
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>National Id</th>
                <th>Gender</th>
                <th>Birthday</th>
                <th>Name</th>
                <th>Address</th>
                <th>Country & Countrycode</th>
                <th>Emailaddress</th>
                <th>Telephonenumber</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                    <td>@Model.Customer.CustomerId</td>
                    <td>@Model.Customer.NationalId</td>
                    <td>@Model.Customer.Gender</td>
                    <td>@Model.Customer.Birthday.ToString("yyyy-MM-dd")</td>
                    <td>@Model.Customer.Givenname @Model.Customer.Surname</td>
                    <td>@Model.Customer.Streetaddress <br/> @Model.Customer.Zipcode @Model.Customer.City</td>
                    <td>@Model.Customer.CountryCode @Model.Customer.Country</td>
                    <td>@Model.Customer.Emailaddress</td>
                    <td>@Model.Customer.Telephonecountrycode @Model.Customer.Telephonenumber</td>
                </tr>
            </tbody>
        </table>
    </div>
    
<div class="col-lg-12 mb-5">
    <div class="card">
        <div class="card-header">
            <h3 class="h6 text-uppercase mb-0">Accounts</h3>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Balance</th>
                <th>Created</th>
                <th>Frequency</th>
                <th>Total amount</th>
                <th>Transactions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var account in Model.Account)
            {
                <tr>
                    <td>@account.AccountId</td>
                    <td>@account.Balance</td>
                    <td>@account.Created</td>
                    <td>@account.Frequency</td>
                    <td><a asp-controller="Account" asp-action="Details" asp-route-Id="@account.AccountId" class="btn btn-dark active" role="button" aria-pressed="true">View transactions</a></td>
                    <td></td>
                </tr>
            }
            
            
            
            </tbody>
        </table>
        
        <h3>Total summa på alla konton: @Model.TotalCustAccount</h3>
    </div>
</div>
</div>


