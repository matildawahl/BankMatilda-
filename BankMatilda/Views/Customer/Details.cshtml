@model BankMatilda.Models.CustomerDetailsViewModel
<div class="row">
    <div class="col-md-3">
        <h1 class="display-4">Details</h1>
    </div>
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Customer Profile</h3>
            </div>
        </div>
       
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>National Id</th>
                        <th>Gender</th>
                        <th>Birthday</th>
                        <th>Name</th>
                        <th>Street Address</th>
                        <th>Zipcode</th>
                        <th>City</th>
                        <th>Countrycode</th>
                        <th>Country</th>
                        <th>Emailaddress</th>
                        <th>Telephonecountrycode</th>
                        <th>Telephonenumber</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customer)
                    {
        <tr>
            <td>@customer.CustomerId</td>
            <td>@customer.NationalId</td>
            <td>@customer.Gender</td>
            <td>@customer.Birthday.ToString("yyyy-MM-dd")</td>
            <td>@customer.Givenname @customer.Surname</td>
            <td>@customer.Streetaddress</td>
            <td>@customer.Zipcode</td>
            <td>@customer.City</td>
            <td>@customer.CountryCode</td>
            <td>@customer.Country</td>
            <td>@customer.Emailaddress</td>
            <td>@customer.Telephonecountrycode</td>
            <td>@customer.Telephonenumber</td>
        </tr>}
                </tbody>
            </table>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Balance</th>
                        <th>Created</th>
                        <th>Frequency</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var accounts in Model.Accounts)
                    {
        <tr>
            <td>@accounts.AccountId</td>
            <td>@accounts.Balance</td>
            <td>@accounts.Created.ToString("yyyy-MM-dd")</td>
            <td>@accounts.Frequency</td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>


