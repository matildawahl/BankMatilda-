@model BankMatilda.Models.CustomerIndexViewModel
@{ ViewData["Title"] = "Admin Page - Customers"; }

<div class="row">
    <div class="col-md-3">
        <h1 class="display-4">Customers</h1>
    </div>
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Customers</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">National ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">City</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>
                            <td>@customer.CustomerId</td>
                            <td>@customer.NationalId</td>
                            <td>@customer.Givenname @customer.Surname</td>
                            <td>@customer.Streetaddress @customer.Zipcode</td>
                            <td>@customer.City</td>
                            <td><a asp-controller="Customer" asp-action="Details" asp-route-Id="@customer.CustomerId" class="btn btn-secondary active" role="button" aria-pressed="true">View customer</a></td>
                            <td><a asp-controller="Customer" asp-action="EditCustomer" asp-route-Id="@customer.CustomerId" class="btn btn-secondary active" role="button" aria-pressed="true">Edit</a></td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="5">
                            <nav aria-label="...">
                                <ul class="pagination justify-content-center flex-wrap">
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link text-primary"
                                           asp-controller="Customer"
                                           asp-action="Index"
                                           asp-route-page="1">First</a>
                                    </li>
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link text-primary"
                                           asp-controller="Customer"
                                           asp-action="Index"
                                           asp-route-page="@(Model.CurrentPage - 1)">Prev</a>
                                    </li>
                        
                                    @foreach (var pa in Model.DisplayPages)
                                    {
                                        <li class="page-item @(Model.CurrentPage == pa ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Customer"
                                               asp-action="Index"
                                               asp-route-page="@pa">@pa</a>
                                        </li>
                                    }
                    
                                    <li class="page-item @(Model.CurrentPage == Model.TotalPageCount ? "disabled" : "")">
                                        <a class="page-link text-primary"
                                           asp-controller="Customer"
                                           asp-action="Index"
                                           asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                                    </li>
                                    <li class="page-item @(Model.CurrentPage == Model.TotalPageCount ? "disabled" : "")">
                                        <a class="page-link text-primary"
                                           asp-controller="Customer"
                                           asp-action="Index"
                                           asp-route-page="@(Model.TotalPageCount)">Last</a>
                                    </li>
                                </ul>
                            </nav>
                        </td>
                    </tr>
                    </tfoot>

                </table>


            </div>
        </div>
    </div>
</div>