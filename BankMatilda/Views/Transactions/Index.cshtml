@model BankMatilda.Models.TransactionsViewModel
@{ ViewData["Title"] = "Transations Page"; }

<section class="py-5">
    <div class="col-md-3">
        <h1 class="display-4">Transactions</h1>
        <ul class="nav nav-pills flex-column">
        </ul>
    </div>
    
    <form asp-controller="Transactions" asp-action="CreateTransaction" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
        <div class="input-group">
            <input type="text" name="accountId" class="form-control bg-light border-0 small" placeholder="accountId.."
                   aria-label="Search" aria-describedby="basic-addon2">
            <input type="text" name="amount" class="form-control bg-light border-0 small" placeholder="Id.."
                   aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button asp-controller="Transactions" asp-action="CreateTransaction" class="btn btn-dark" type="submit">
                    <i class="fas fa-search fa-sm"></i>
                </button>
            </div>
        </div>
    </form>

    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Senaste trans</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">AccountId</th>
                            <th scope="col">Operation</th>
                            <th scope="col">Date</th>
                            <th scope="col">TransactionId</th>
                            <th scope="col">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transations in Model.Transactions)
                        {
            <tr>
                <td>@transations.AccountId</td>
                <td>@transations.Operation</td>
                <td>
                    @transations.Date
                </td>
                <td>@transations.TransactionId</td>
                <td>@transations.Amount</td>
            </tr>}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5">
                                <nav aria-label="...">
                                    <ul class="pagination justify-content-center flex-wrap">
                                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Account"
                                               asp-action="Index"
                                               asp-route-page="1">First</a>
                                        </li>
                                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Account"
                                               asp-action="Index"
                                               asp-route-page="@(Model.CurrentPage - 1)">Prev</a>
                                        </li>

                                        @foreach (var pa in Model.DisplayPages)
                                        {
                            <li class="page-item @(Model.CurrentPage == pa ? "disabled" : "")">
                                <a class="page-link text-primary"
                                   asp-controller="Account"
                                   asp-action="Index"
                                   asp-route-page="@pa">@pa</a>
                            </li>}

                                        <li class="page-item @(Model.CurrentPage == Model.TotalPageCount ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Account"
                                               asp-action="Index"
                                               asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                                        </li>
                                        <li class="page-item @(Model.CurrentPage == Model.TotalPageCount ? "disabled" : "")">
                                            <a class="page-link text-primary"
                                               asp-controller="Account"
                                               asp-action="Index"
                                               asp-route-page="@(Model.TotalPageCount)">Last</a>
                                        </li>
                                    </ul>
                                </nav>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</section>